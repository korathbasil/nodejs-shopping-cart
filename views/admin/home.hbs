<section>
    <div class="productsView">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.category}}</td>
                    <td><img style="height: 150px ; width: 150px; object-fit: contain;" src="{{this.image}}" alt="">
                    </td>
                    <td>
                        <a class="btn btn-warning" href="/admin/edit-product/{{this._id}}">Edit</a>
                        <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <a href="/admin/add-product"><button>Add product</button></a>
    <h3>Products</h3>
</section>